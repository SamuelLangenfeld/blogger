<h1>Articles tagged with <%= @tag.name %></h1>

<ul>
	<% @tag.articles.each do |article| %>
		<li><%= link_to article.title, article_path(article) %></li>
	<%end%>

</ul>
<p style="text-decoration: none;color:red;background-color:yellow">
<a style="text-decoration: none;color:red;background-color:yellow"><%= link_to "Delete Tag", tag_path(@tag), method: :delete, data: {confirm: "Really delete the tag?"} %></a>
</p>